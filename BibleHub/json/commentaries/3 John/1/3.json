      {
        "element": "span",
        "class": "ital",
        "text": "{as 1 Corinthians 4:15}",
        "children": [
          {
            "element": "span",
            "class": "",
            "text": "{as ",
            "children": []
          },
          {
            "element": "span",
            "class": "bld",
            "text": "1 Corinthians 4:15",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": "}",
            "children": []
          }
