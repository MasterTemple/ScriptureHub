    "elements": [
      {
        "element": "span",
        "class": "verse-link",
        "text": "Acts 28:8",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". ",
        "children": []
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "Ἐγένετο",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "It came to pass",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ") There is described a disease most serious, in respect to the age of the patient and the complication of the maladies.—",
        "children": []
      },
      {
