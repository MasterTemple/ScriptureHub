  {
    "type": "EXEGETICAL (ORIGINAL LANGUAGES)",
    "name": "Meyer's NT Commentary",
    "elements": [
      {
        "element": "span",
        "class": "verse-link",
        "text": "Acts 21:22-23",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". ",
