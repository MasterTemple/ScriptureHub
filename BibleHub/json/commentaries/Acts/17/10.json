        "text": " for ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "Berea",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", A.V.; ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "when they were",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " come for ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
