    "elements": [
      {
        "element": "span",
        "class": "",
        "text": "(5) ",
        "children": []
      },
      {
        "element": "span",
        "class": "bld",
        "text": "Let them . . . which among you are able.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "—The adjective is probably used, as in ",
        "children": []
