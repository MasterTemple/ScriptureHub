          {
            "element": "br",
            "class": "",
            "text": "",
            "children": []
          }
        ]
      },
      {
        "element": "span",
        "class": "bld",
        "text": "Answered, ",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " or spake to ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "Paul; ",
        "children": []
      },
      {
        "element": "span",
