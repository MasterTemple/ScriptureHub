        "text": " Ovid, ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "Am.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", iii., 2, 74, and also instances in Wetstein, ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "cf.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " Chrys., who explains ",
        "children": []
      },
