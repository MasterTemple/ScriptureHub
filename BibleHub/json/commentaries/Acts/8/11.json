        "text": "Acts 2:1",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " we read ",
        "children": []
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "οὐ μαγεύσεις οὐ φαρμακεύσεις",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ".—",
        "children": []
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "ἐξεστακέναι",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", see above on ",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Acts 8:9",
        "children": []
