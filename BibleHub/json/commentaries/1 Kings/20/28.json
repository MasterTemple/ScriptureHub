        "element": "span",
        "class": "greek",
        "text": "ὁ ἄνθρωπος τοῦ θεοῦ",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "), but ",
        "children": []
      },
      {
        "element": "span",
        "class": "hebrew",
        "text": "אִיּשׁ הֶךאלהִים",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " (see ",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Judges 13:6",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "; ",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Deuteronomy 33:1",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ") is often hardly distinguishable from the same words without the article], ",
        "children": []
      },
      {
        "element": "span",
        "class": "cmt_word",
        "text": "and spake",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " [Heb. ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "said",
        "children": []
      },
      {
        "element": "span",
        "class": "",
