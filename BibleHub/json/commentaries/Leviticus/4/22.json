  {
    "type": "EXEGETICAL (ORIGINAL LANGUAGES)",
    "name": "Cambridge Bible for Schools and Colleges",
    "elements": [
      {
        "element": "span",
        "class": "",
        "text": "22–26. ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "The Sin-Offering for the ruler, a he-goat",
        "children": [
          {
            "element": "span",
            "class": "",
            "text": "The Sin-Offering for the ruler, a he-goat",
            "children": []
          },
          {
            "element": "span",
