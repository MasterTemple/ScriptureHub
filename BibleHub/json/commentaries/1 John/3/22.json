      {
        "element": "span",
        "class": "",
        "text": " and ",
        "children": []
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "τὰ ἀρεστὰ ἐνώπιον αὐτοῦ",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " are synonymous;[248] by ",
