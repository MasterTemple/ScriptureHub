        "element": "span",
        "class": "p",
        "text": "",
        "children": [
          {
            "element": "br",
            "class": "",
            "text": "",
            "children": []
          },
          {
            "element": "br",
            "class": "",
            "text": "",
            "children": []
          }
        ]
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "ἵνα ἀνεπίληπτοι ὦσιν",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "] ",
        "children": []
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "ἵνα",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " here gives the purpose (at ",
        "children": []
