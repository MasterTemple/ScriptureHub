      {
        "element": "p",
        "class": "",
        "text": "(k) Ut supra, (Antiqu. l. 9.) c. 10. sect. 1.",
        "children": [
          {
            "element": "span",
            "class": "",
            "text": "(k) Ut supra, (Antiqu. l. 9.) c. 10. sect. 1.",
            "children": []
          },
          {
            "element": "span",
            "class": "verse-link",
            "text": "",
            "children": []
          }
        ]
      }
