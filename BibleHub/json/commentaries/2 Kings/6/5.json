    "name": "Benson Commentary",
    "elements": [
      {
        "element": "span",
        "class": "bld",
        "text": "2 Kings 6:5",
        "children": [
          {
            "element": "span",
            "class": "verse-link",
            "text": "2 Kings 6:5",
            "children": []
          }
        ]
      },
      {
        "element": "span",
