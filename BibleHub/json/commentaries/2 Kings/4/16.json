          {
            "element": "span",
            "class": "",
            "text": "—Rather, ",
            "children": []
          },
          {
            "element": "span",
            "class": "ital",
            "text": "at the reviving time—i.e.",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": ", next spring; or, ",
            "children": []
          },
          {
            "element": "span",
            "class": "ital",
            "text": "when the time revives",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": "—",
            "children": []
          },
          {
            "element": "span",
            "class": "ital",
            "text": "i.e.",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": ", in the following year: a phrase occurring in ",
            "children": []
