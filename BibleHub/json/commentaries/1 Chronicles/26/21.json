    "name": "Pulpit Commentary",
    "elements": [
      {
        "element": "span",
        "class": "cmt_sub_title",
        "text": "Verses 21, 22.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " - These verses name those who had the care of the treasures of the ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "house of the Lord.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " They are ",
        "children": []
      },
      {
        "element": "span",
        "class": "cmt_word",
        "text": "Gershonites",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " through ",
        "children": []
      },
      {
        "element": "span",
        "class": "cmt_word",
        "text": "Laaden",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", previously called ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "Libni",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " (",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "1 Chronicles 6:17",
        "children": []
      },
      {
