      {
        "element": "span",
        "class": "ital",
        "text": "the prayer for offspring;",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " Jehozabad, ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "Jah hath bestowed,",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " is the second; Joah, ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "Jah is a kinsman,",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " the third; Sacar, ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "reward",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " (",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Genesis 15:1",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "), is the fourth; Nethaneel, or Nathanael (Dositheus, Dorotheus, Deusdedit) ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "God hath given,",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " the fifth; Ammiel, ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "a kinsman is God,",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " the sixth; the seventh, Issachar, ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "there is a reward;",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " the eighth, Peulthai (Heb., Pĕullĕthai), ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "work or recompense of Jah.",
        "children": []
      },
      {
        "element": "p",
        "class": "",
        "text": "",
        "children": []
      }
    ]
