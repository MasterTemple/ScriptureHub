    "type": "EXPOSITORY (ENGLISH BIBLE)",
    "name": "Ellicott's Commentary for English Readers",
    "elements": [
      {
        "element": "span",
        "class": "",
        "text": "(14-18) ",
        "children": []
      },
      {
        "element": "span",
        "class": "bld",
        "text": "And when the hour was come.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "—See Notes on ",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Matthew 26:20",
        "children": []
