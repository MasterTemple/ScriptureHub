      },
      {
        "element": "span",
        "class": "",
        "text": " here (a general term); ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "etupton",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", ‘they kept smiting;’ ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "paisas",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " in the next verse, implying violence; ",
        "children": []
      },
      {
        "element": "span",
