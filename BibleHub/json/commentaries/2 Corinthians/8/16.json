    "elements": [
      {
        "element": "span",
        "class": "",
        "text": "16. ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "But thanks be to God",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "] The word translated ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
