      {
        "element": "span",
        "class": "verse-link",
        "text": "Numbers 13",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "; ",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Deuteronomy 31:3, 7, 14, 20",
        "children": []
      },
