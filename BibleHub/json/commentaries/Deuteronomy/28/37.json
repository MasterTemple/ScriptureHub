  {
    "type": "EXPOSITORY (ENGLISH BIBLE)",
    "name": "Benson Commentary",
    "elements": [
      {
        "element": "span",
        "class": "bld",
        "text": "Deuteronomy 28:37",
        "children": [
          {
            "element": "span",
            "class": "verse-link",
            "text": "Deuteronomy 28:37",
            "children": []
