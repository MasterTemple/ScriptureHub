        "children": [
          {
            "element": "br",
            "class": "",
            "text": "",
            "children": []
          },
          {
            "element": "br",
            "class": "",
            "text": "",
            "children": []
          }
        ]
      },
      {
        "element": "span",
        "class": "bld",
        "text": "Or of his brother:",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " this is added to explain and limit the word ",
        "children": []
      },
      {
        "element": "span",
        "class": "p",
