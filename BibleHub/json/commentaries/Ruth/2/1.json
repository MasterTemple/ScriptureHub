    "elements": [
      {
        "element": "span",
        "class": "cmt_sub_title",
        "text": "Verse 1.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " - ",
        "children": []
      },
      {
        "element": "span",
        "class": "cmt_word",
        "text": "And Naomi had, on her husband's side, a friend.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " The C'tib reading ",
        "children": []
      },
      {
        "element": "span",
        "class": "hebrew",
        "text": "מְיֻדַּע",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " (absolute ",
        "children": []
      },
      {
        "element": "span",
        "class": "hebrew",
        "text": "מְיֻדָע",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ") is much to be preferred to the K'ri ",
        "children": []
      },
      {
        "element": "span",
        "class": "hebrew",
        "text": "מודַע",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". But ",
        "children": []
      },
      {
        "element": "span",
        "class": "hebrew",
        "text": "מְיֻדָּע",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " is ambiguous in import. It primarily means ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "known",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "well-known",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "acquainted",
