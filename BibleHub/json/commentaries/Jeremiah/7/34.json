      {
        "element": "span",
        "class": "",
        "text": " - ",
        "children": []
      },
      {
        "element": "span",
        "class": "cmt_word",
        "text": "The land shall be desolate",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "; rather, ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "shall become a waste",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". The curse denounced upon the disobedient people in ",
        "children": []
      },
