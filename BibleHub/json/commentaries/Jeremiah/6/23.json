        "element": "span",
        "class": "verse-link",
        "text": "Isaiah 17:12, 13",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "). Jeremiah 6:23",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "",
        "children": []
      }
    ]
