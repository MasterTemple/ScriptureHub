    "elements": [
      {
        "element": "span",
        "class": "bld",
        "text": "Jeremiah 52:12-13. ",
        "children": [
          {
            "element": "span",
            "class": "verse-link",
            "text": "Jeremiah 52:12-13",
            "children": []
          },
          {
            "element": "span",
