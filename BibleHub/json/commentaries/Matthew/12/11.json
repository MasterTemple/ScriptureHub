        "text": "Πρόβατον ἓν",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "one sheep",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ") The loss of which was not great.—",
        "children": []
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "οὐχὶ κρατήσει",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", ",
        "children": []
      },
      {
        "element": "span",
