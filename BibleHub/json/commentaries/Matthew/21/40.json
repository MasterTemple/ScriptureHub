    "name": "Benson Commentary",
    "elements": [
      {
        "element": "span",
        "class": "bld",
        "text": "Matthew 21:40-41",
        "children": [
          {
            "element": "span",
            "class": "verse-link",
            "text": "Matthew 21:40-41",
            "children": []
