  {
    "type": "EXEGETICAL (ORIGINAL LANGUAGES)",
    "name": "Cambridge Bible for Schools and Colleges",
    "elements": [
      {
        "element": "span",
        "class": "bld",
        "text": "18–22",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". The Cursing of the Fig-Tree",
        "children": []
      },
      {
        "element": "span",
        "class": "p",
        "text": "",
        "children": [
          {
            "element": "br",
            "class": "",
            "text": "",
            "children": []
          },
          {
            "element": "br",
            "class": "",
            "text": "",
            "children": []
          }
        ]
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Mark 11:12-14",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "; ",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Mark 11:20-24",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". St Mark places this incident before the “Cleansing of the Temple,” see note ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "Matthew 21:12-14",
        "children": [
          {
            "element": "span",
            "class": "verse-link",
            "text": "Matthew 21:12-14",
            "children": []
          }
        ]
      },
      {
        "element": "span",
        "class": "",
        "text": ".",
        "children": []
      },
      {
        "element": "span",
        "class": "p",
        "text": "",
        "children": [
          {
            "element": "br",
            "class": "",
            "text": "",
            "children": []
          },
          {
            "element": "br",
            "class": "",
            "text": "",
