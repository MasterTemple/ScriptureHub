      {
        "element": "span",
        "class": "greekheb",
        "text": "σταυρωθήτω",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "let Him be crucified",
        "children": []
      },
