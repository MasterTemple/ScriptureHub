    "elements": [
      {
        "element": "span",
        "class": "cmt_sub_title",
        "text": "Verse 49.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " - ",
        "children": []
      },
      {
        "element": "span",
        "class": "cmt_word",
        "text": "The rest",
        "children": []
      },
      {
        "element": "span",
        "class": "",
