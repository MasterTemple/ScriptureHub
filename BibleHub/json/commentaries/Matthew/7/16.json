      },
      {
        "element": "span",
        "class": "",
        "text": "[326] ",
        "children": []
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "τῶν καρπῶν αὐτῶν",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", ",
        "children": []
      },
      {
