  {
    "type": "EXEGETICAL (ORIGINAL LANGUAGES)",
    "name": "Meyer's NT Commentary",
    "elements": [
      {
        "element": "span",
        "class": "verse-link",
        "text": "Romans 10:13",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". Ground assigned for ",
        "children": []
      },
