      {
        "element": "span",
        "class": "ital",
        "text": "mortuos",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " in culpa ad damnationem; Bened. Arias: ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "vivos",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " adhuc in carne illa Adami: ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "mortuos",
        "children": []
      },
      {
        "element": "span",
