  {
    "type": "EXEGETICAL (ORIGINAL LANGUAGES)",
    "name": "Pulpit Commentary",
    "elements": [
      {
        "element": "span",
        "class": "cmt_sub_title",
        "text": "Verses 4, 5.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " - ",
        "children": []
      },
      {
        "element": "span",
        "class": "cmt_word",
        "text": "And Adah bare to Esau Eliphas",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "; - \"The Strength of God\" (Gesenius); afterwards the name of one of Job's friends (",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Job 2:11",
