  {
    "type": "EXPOSITORY (ENGLISH BIBLE)",
    "name": "Benson Commentary",
    "elements": [
      {
        "element": "span",
        "class": "bld",
        "text": "Genesis 19:17",
        "children": [
          {
            "element": "span",
            "class": "verse-link",
            "text": "Genesis 19:17",
            "children": []
