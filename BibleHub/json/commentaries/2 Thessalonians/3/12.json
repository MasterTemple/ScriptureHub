          {
            "element": "span",
            "class": "verse-link",
            "text": "2 Corinthians 13:11",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": " ",
            "children": []
          },
          {
            "element": "span",
            "class": "verse-link",
            "text": "Colossians 3:15",
            "children": []
