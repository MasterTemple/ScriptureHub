          {
            "element": "span",
            "class": "verse-link",
            "text": "1 Thessalonians 5:13",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": " ",
            "children": []
          },
          {
            "element": "span",
            "class": "verse-link",
            "text": "Hebrews 12:14",
            "children": []
          }
