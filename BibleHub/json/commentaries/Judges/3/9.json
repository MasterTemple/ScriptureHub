  {
    "type": "EXEGETICAL (ORIGINAL LANGUAGES)",
    "name": "Pulpit Commentary",
    "elements": [
      {
        "element": "span",
        "class": "cmt_sub_title",
        "text": "Verse 9.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " - ",
        "children": []
      },
      {
        "element": "span",
        "class": "cmt_word",
        "text": "A deliverer",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". Hebrew, ",
        "children": []
      },
      {
        "element": "span",
        "class": "accented",
        "text": "Saviour",
        "children": []
      },
      {
        "element": "span",
        "class": "",
