    "elements": [
      {
        "element": "span",
        "class": "verse-link",
        "text": "John 8:13",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". To this the Pharisees, seeing only self-assertion, reply: ",
        "children": []
