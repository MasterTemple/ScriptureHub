  {
    "type": "EXEGETICAL (ORIGINAL LANGUAGES)",
    "name": "Meyer's NT Commentary",
    "elements": [
      {
        "element": "span",
        "class": "verse-link",
        "text": "Mark 10:28-31",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". See on ",
        "children": []
      },
      {
        "element": "span",
