      {
        "element": "span",
        "class": "ital",
        "text": "Lepton",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", here mentioned, was the very smallest copper coin. Two made one Roman ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "quadrans",
        "children": []
      },
