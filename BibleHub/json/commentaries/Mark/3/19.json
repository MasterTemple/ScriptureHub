[
  {
    "type": "EXPOSITORY (ENGLISH BIBLE)",
    "name": "Ellicott's Commentary for English Readers",
    "elements": [
      {
        "element": "span",
        "class": "",
        "text": "(19) ",
        "children": []
      },
      {
        "element": "span",
        "class": "bld",
        "text": "And they went into an house.",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "—It would be better to put a full stop after “betrayed Him,” and to make this the beginning of a new sentence.",
        "children": []
      },
      {
        "element": "p",
        "class": "",
        "text": "",
        "children": []
      }
    ]
