  {
    "type": "EXEGETICAL (ORIGINAL LANGUAGES)",
    "name": "Cambridge Bible for Schools and Colleges",
    "elements": [
      {
        "element": "span",
        "class": "bld",
        "text": "19",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ". xii. ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "Judas Iscariot",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "] sometimes called ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "the son of Simon",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " (",
        "children": []
      },
      {
