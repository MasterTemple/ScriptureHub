      {
        "element": "span",
        "class": "",
        "text": ", you are men in a very perilous ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "moral",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " condition. Beware!”",
        "children": []
      },
