      {
        "element": "span",
        "class": "",
        "text": "— The crowd of people that ",
        "children": []
      },
      {
        "element": "span",
        "class": "ital",
        "text": "wept and wailed greatly ",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": "— Greek ",
        "children": []
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "αλαλαζοντας πολλα",
        "children": []
      },
      {
