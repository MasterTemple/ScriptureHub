    "type": "EXPOSITORY (ENGLISH BIBLE)",
    "name": "Ellicott's Commentary for English Readers",
    "elements": [
      {
        "element": "span",
        "class": "",
        "text": "(34) ",
        "children": []
      },
      {
        "element": "span",
        "class": "bld",
        "text": "In one day they shall die both of them.",
        "children": []
