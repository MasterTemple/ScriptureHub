          {
            "element": "span",
            "class": "",
            "text": " a phrase here used as equivalent to ",
            "children": []
          },
          {
            "element": "span",
            "class": "ital",
            "text": "turned neck",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": " (",
            "children": []
          },
          {
            "element": "span",
