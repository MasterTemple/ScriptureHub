  {
    "type": "EXPOSITORY (ENGLISH BIBLE)",
    "name": "Benson Commentary",
    "elements": [
      {
        "element": "span",
        "class": "bld",
        "text": "2 Chronicles 3:6-7",
        "children": [
          {
            "element": "span",
            "class": "verse-link",
            "text": "2 Chronicles 3:6-7",
            "children": []
          }
        ]
      },
      {
