  {
    "type": "EXPOSITORY (ENGLISH BIBLE)",
    "name": "Ellicott's Commentary for English Readers",
    "elements": [
      {
        "element": "span",
        "class": "bld",
        "text": "PARTICULAES CONCERNING REHOBOAM’S FAMILY",
        "children": []
      },
      {
        "element": "p",
        "class": "",
        "text": "(2Chronicles 11:18-23).",
        "children": [
          {
            "element": "span",
            "class": "",
            "text": "(",
            "children": []
          },
          {
            "element": "span",
            "class": "verse-link",
            "text": "2Chronicles 11:18-23",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": ").",
            "children": []
          }
        ]
      },
      {
        "element": "p",
        "class": "",
        "text": "This record also is wanting in the Book of Kings. It appears to have been derived from the sources designated in 2Chronicles 12:15.",
        "children": [
          {
            "element": "span",
            "class": "",
            "text": "This record also is wanting in the Book of Kings. It appears to have been derived from the sources designated in ",
            "children": []
          },
          {
