          {
            "element": "span",
            "class": "ital",
            "text": "Entered into His holy dwelling",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": " (comp. ",
            "children": []
          },
          {
            "element": "span",
            "class": "verse-link",
            "text": "Isaiah 18:6",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": ") ",
            "children": []
          },
          {
            "element": "span",
            "class": "ital",
            "text": "into the heavens.",
            "children": []
          },
          {
            "element": "span",
            "class": "",
            "text": " Notice the characteristic omission of the sacred Name.",
            "children": []
          }
        ]
