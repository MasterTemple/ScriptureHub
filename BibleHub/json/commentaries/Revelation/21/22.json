      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "φωστήρ",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": ", because it ",
        "children": []
      },
      {
        "element": "span",
        "class": "greekheb",
        "text": "φωτίζωι",
        "children": []
      },
      {
        "element": "span",
        "class": "",
        "text": " (",
        "children": []
      },
      {
        "element": "span",
        "class": "verse-link",
        "text": "Revelation 21:23",
        "children": []
      },
      {
        "element": "span",
