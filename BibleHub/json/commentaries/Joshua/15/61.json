    "name": "Cambridge Bible for Schools and Colleges",
    "elements": [
      {
        "element": "span",
        "class": "",
        "text": "61–63. Cities in the Wilderness",
        "children": []
      },
      {
        "element": "span",
        "class": "p",
        "text": "",
        "children": [
