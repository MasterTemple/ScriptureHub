      {
        "element": "span",
        "class": "bldvs",
        "text": " Joshua 8:26",
        "children": [
          {
            "element": "span",
            "class": "",
            "text": " ",
            "children": []
          },
          {
            "element": "span",
            "class": "verse-link",
            "text": "Joshua 8:26",
            "children": []
          }
