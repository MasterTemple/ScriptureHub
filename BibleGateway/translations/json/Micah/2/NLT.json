[[],[{"type":"header","content":"Judgment against Wealthy Oppressors"},{"type":"poetry","content":"You rise at dawn and hurry to carry them out,"}],[{"type":"poetry","content":"When you want a piece of land,"},{"type":"poetry","content":"When you want someone’s house,"},{"type":"poetry","content":"You cheat a man of his property,"}],[{"type":"header","content":"True and False Prophets"},{"type":"poetry","content":"“Don’t say such things,”"},{"type":"poetry","content":"“Don’t prophesy like that."}],[{"type":"header","content":"Hope for Restoration"},{"type":"poetry","content":"“Someday, O Israel, I will gather you;"},{"type":"poetry","content":"I will bring you together again like sheep in a pen,"},{"type":"poetry","content":"Yes, your land will again"}],[{"type":"poetry","content":"Your leader will break out"},{"type":"poetry","content":"out through the gates of the enemy cities,"},{"type":"poetry","content":"Your king will lead you;"}]]