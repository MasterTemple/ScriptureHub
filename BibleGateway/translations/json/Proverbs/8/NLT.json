[[],[{"type":"header","content":"Wisdom Calls for a Hearing"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"On the hilltop along the road,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"By the gates at the entrance to the town,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"â€œI call to you, to all of you!"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"You simple people, use good judgment."},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Listen to me! For I have important things to tell you."},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"for I speak the truth"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"My advice is wholesome."},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"My words are plain to anyone with understanding,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Choose my instruction rather than silver,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"For wisdom is far more valuable than rubies."},{"type":"poetry","content":""}]]