[[],[{"type":"header","content":"Psalm 83"},{"type":"header","content":"Prayer for Judgment on Israel’s Foes"},{"type":"prose","content":"A Song. A Psalm of Asaph."}],[{"type":"poetry","content":"O God, do not keep silence;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Even now your enemies are in tumult;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"They lay crafty plans against your people;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"They say, “Come, let us wipe them out as a nation;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"They conspire with one accord;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"the tents of Edom and the Ishmaelites,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Gebal and Ammon and Amalek,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Assyria also has joined them;"},{"type":"poetry","content":""}]]