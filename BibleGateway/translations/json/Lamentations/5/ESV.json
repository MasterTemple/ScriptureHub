[[],[{"type":"header","content":"Restore Us to Yourself, O Lord"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Our inheritance has been turned over to strangers,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"We have become orphans, fatherless;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"We must pay for the water we drink;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Our pursuers are at our necks;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"We have given the hand to Egypt, and to Assyria,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Our fathers sinned, and are no more;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Slaves rule over us;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"We get our bread at the peril of our lives,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Our skin is hot as an oven"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Women are raped in Zion,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Princes are hung up by their hands;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Young men are compelled to grind at the mill,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"The old men have left the city gate,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"The joy of our hearts has ceased;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"The crown has fallen from our head;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"For this our heart has become sick,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"for Mount Zion which lies desolate;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"But you, O , reign forever;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Why do you forget us forever,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Restore us to yourself, O , that we may be restored!"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"unless you have utterly rejected us,"},{"type":"poetry","content":""},{"type":"prose","content":"Cross references\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n"}]]