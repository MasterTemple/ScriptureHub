[[],[{"type":"header","content":"A Plea for Mercy"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Our inheritance has been turned over to strangers,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"We have become orphans, fatherless;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"We must pay for the water we drink;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"With a yoke on our necks we are hard driven;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"We have made a pact with Egypt and Assyria,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Our ancestors sinned; they are no more,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Slaves rule over us;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"We get our bread at the peril of our lives,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Our skin is black as an oven"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Women are raped in Zion,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Princes are hung up by their hands;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Young men are compelled to grind,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"The old men have left the city gate,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"The joy of our hearts has ceased;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"The crown has fallen from our head;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Because of this our hearts are sick,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"because of Mount Zion, which lies desolate;"},{"type":"poetry","content":""}]]