[[],[{"type":"prose","content":"The oracle that the prophet Habakkuk saw."},{"type":"header","content":"The Prophet’s Complaint"}],[{"type":"poetry","content":"O , how long shall I cry for help,"},{"type":"poetry","content":""},{"type":"poetry","content":"Or cry to you “Violence!”"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Why do you make me see wrongdoing"},{"type":"poetry","content":""},{"type":"poetry","content":"Destruction and violence are before me;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"So the law becomes slack"},{"type":"poetry","content":""},{"type":"poetry","content":"The wicked surround the righteous—"},{"type":"poetry","content":""}]]