[[],[{"type":"header","content":"A Plea for Repentance"}],[{"type":"poetry","content":"Take words with you"},{"type":"poetry","content":"say to him,"},{"type":"poetry","content":"accept that which is good,"}],[{"type":"poetry","content":"Assyria shall not save us;"},{"type":"poetry","content":"we will say no more, ‘Our God,’"},{"type":"poetry","content":"In you the orphan finds mercy.”"}],[{"type":"header","content":"Assurance of Forgiveness"},{"type":"poetry","content":"I will heal their disloyalty;"}],[{"type":"poetry","content":"I will be like the dew to Israel;"}],[{"type":"poetry","content":"His shoots shall spread out;"}],[{"type":"poetry","content":"They shall again live beneath my shadow,"},{"type":"poetry","content":"they shall blossom like the vine,"}]]