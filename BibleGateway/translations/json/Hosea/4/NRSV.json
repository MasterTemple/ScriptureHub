[[],[{"type":"header","content":"God Accuses Israel"},{"type":"poetry","content":"There is no faithfulness or loyalty,"}],[{"type":"poetry","content":"Swearing, lying, and murder,"}],[{"type":"poetry","content":"Therefore the land mourns,"},{"type":"poetry","content":"together with the wild animals"},{"type":"header","content":"The Idolatry of Israel"},{"type":"poetry","content":"Wine and new wine"}],[{"type":"poetry","content":"My people consult a piece of wood,"},{"type":"poetry","content":"For a spirit of whoredom has led them astray,"}],[{"type":"poetry","content":"They sacrifice on the tops of the mountains,"},{"type":"poetry","content":"under oak, poplar, and terebinth,"}]]