[[],[{"type":"header","content":"The Lord’s Case against Israel"},{"type":"poetry","content":""},{"type":"poetry","content":"“There is no faithfulness, no kindness,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"You make vows and break them;"},{"type":"poetry","content":""},{"type":"poetry","content":"There is violence everywhere—"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"That is why your land is in mourning,"},{"type":"poetry","content":""},{"type":"poetry","content":"Even the wild animals, the birds of the sky,"},{"type":"poetry","content":""}]]