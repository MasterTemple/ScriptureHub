[[],[{"type":"header","content":"Judgment against the Lord’s Enemies"},{"type":"poetry","content":""},{"type":"poetry","content":""},{"type":"poetry","content":"Who is this in royal robes,"},{"type":"poetry","content":""},{"type":"header","content":"Praise for Deliverance"}],[{"type":"poetry","content":"I will tell of the ’s unfailing love."},{"type":"poetry","content":""},{"type":"poetry","content":"I will rejoice in his great goodness to Israel,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"He said, “They are my very own people."},{"type":"poetry","content":""},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"In all their suffering he also suffered,"},{"type":"poetry","content":""},{"type":"poetry","content":"In his love and mercy he redeemed them."},{"type":"poetry","content":""},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"But they rebelled against him"},{"type":"poetry","content":""},{"type":"poetry","content":"So he became their enemy"},{"type":"poetry","content":""},{"type":"header","content":"Prayer for Mercy and Pardon"}],[{"type":"poetry","content":", look down from heaven;"},{"type":"poetry","content":""},{"type":"poetry","content":"Where is the passion and the might"},{"type":"poetry","content":""},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Surely you are still our Father!"},{"type":"poetry","content":""},{"type":"poetry","content":", you would still be our Father."},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":", why have you allowed us to turn from your path?"},{"type":"poetry","content":""},{"type":"poetry","content":"Return and help us, for we are your servants,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"How briefly your holy people possessed your holy place,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Sometimes it seems as though we never belonged to you,"},{"type":"poetry","content":""}]]