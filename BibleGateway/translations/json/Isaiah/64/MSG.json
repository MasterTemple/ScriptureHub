[[],[{"type":"header","content":"Can We Be Saved?"},{"type":"poetry","content":""},{"type":"poetry","content":"As when a forest catches fire,"},{"type":"poetry","content":""},{"type":"poetry","content":"To shock your enemies into facing you,"},{"type":"poetry","content":""},{"type":"poetry","content":"You did terrible things we never expected,"},{"type":"poetry","content":""},{"type":"poetry","content":"Since before time began"},{"type":"poetry","content":""},{"type":"poetry","content":"No ear heard, no eye seen, a God like you"},{"type":"poetry","content":""},{"type":"poetry","content":"You meet those who happily do what is right,"},{"type":"poetry","content":""},{"type":"poetry","content":"But how angry you’ve been with us!"},{"type":"poetry","content":""},{"type":"poetry","content":""},{"type":"poetry","content":"We’re all sin-infected, sin-contaminated."},{"type":"poetry","content":""},{"type":"poetry","content":"We dry up like autumn leaves—"},{"type":"poetry","content":""},{"type":"poetry","content":"No one prays to you"},{"type":"poetry","content":""},{"type":"poetry","content":"Because you’ve turned away from us,"},{"type":"poetry","content":""}]]