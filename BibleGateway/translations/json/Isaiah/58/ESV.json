[[],[{"type":"header","content":"True and False Fasting"},{"type":"poetry","content":""},{"type":"poetry","content":"declare to my people their transgression,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Yet they seek me daily"},{"type":"poetry","content":""},{"type":"poetry","content":"as if they were a nation that did righteousness"},{"type":"poetry","content":""},{"type":"poetry","content":"they ask of me righteous judgments;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"â€˜Why have we fasted, and you see it not?"},{"type":"poetry","content":""},{"type":"poetry","content":"Behold, in the day of your fast you seek your own pleasure,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Behold, you fast only to quarrel and to fight"},{"type":"poetry","content":""},{"type":"poetry","content":"Fasting like yours this day"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Is such the fast that I choose,"},{"type":"poetry","content":""},{"type":"poetry","content":"Is it to bow down his head like a reed,"},{"type":"poetry","content":""},{"type":"poetry","content":"Will you call this a fast,"},{"type":"poetry","content":""}]]