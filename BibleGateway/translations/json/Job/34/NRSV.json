[[],[{"type":"header","content":"Elihu Proclaims God’s Justice"},{"type":"prose","content":"Then Elihu continued and said:"}],[{"type":"poetry","content":"“Hear my words, you wise men,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"for the ear tests words"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Let us choose what is right;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"For Job has said, ‘I am innocent,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"in spite of being right I am counted a liar;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Who is there like Job,"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"who goes in company with evildoers"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"For he has said, ‘It profits one nothing"},{"type":"poetry","content":""}]]