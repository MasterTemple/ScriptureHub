[[],[{"type":"header","content":"Elihu Condemns Self-Righteousness"},{"type":"prose","content":"Elihu continued and said:"}],[{"type":"poetry","content":"“Do you think this to be just?"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"If you ask, ‘What advantage have I?"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"I will answer you"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Look at the heavens and see;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"If you have sinned, what do you accomplish against him?"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"If you are righteous, what do you give to him;"},{"type":"poetry","content":""},{"type":"poetry","content":""}],[{"type":"poetry","content":"Your wickedness affects others like you,"},{"type":"poetry","content":""}]]